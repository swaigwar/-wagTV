    "typescript": "^5.5.0",
    "eslint": "^8.58.0",
    "eslint-config-next": "14.2.4",
    "prettier": "^3.3.1",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "jest": "^29.8.1",
